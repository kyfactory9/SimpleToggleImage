<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <local:ImageToggleControl Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="bulb"/>
        <StackPanel Orientation="Horizontal" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button x:Name="btnBulbOn" Content="ON" Width="100" Height="30" Click="BtnBulbOn_Click"/>
            <Button x:Name="btnBulbOff" Content="OFF" Width="100" Height="30" Click="BtnBulbOff_Click"/>
        </StackPanel>
    </Grid>
</Window>
